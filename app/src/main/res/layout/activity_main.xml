<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="Sound 1"
        android:id="@+id/btn1" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="Sound 2"
        android:id="@+id/btn2"
        android:layout_above="@+id/btn4"
        android:layout_alignLeft="@+id/btn5"
        android:layout_alignStart="@+id/btn5" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="Sound 3"
        android:id="@+id/btn3"
        android:layout_alignTop="@+id/btn2"
        android:layout_toRightOf="@+id/btn2"
        android:layout_toEndOf="@+id/btn2" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="Sound 4"
        android:id="@+id/btn4"
        android:layout_below="@+id/btn1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="Sound 5"
        android:id="@+id/btn5"
        android:layout_below="@+id/btn2"
        android:layout_toRightOf="@+id/btn4"
        android:layout_toEndOf="@+id/btn4" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="Sound 6"
        android:id="@+id/btn6"
        android:layout_below="@+id/btn2"
        android:layout_toRightOf="@+id/btn5"
        android:layout_toEndOf="@+id/btn5" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="Sound 7"
        android:id="@+id/btn7"
        android:layout_below="@+id/btn4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="Sound 8"
        android:id="@+id/btn8"
        android:layout_below="@+id/btn4"
        android:layout_toRightOf="@+id/btn4"
        android:layout_toEndOf="@+id/btn4" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="Sound 9"
        android:id="@+id/btn9"
        android:layout_below="@+id/btn5"
        android:layout_toRightOf="@+id/btn8"
        android:layout_toEndOf="@+id/btn8" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="play beat"
        android:id="@+id/btn_beat"
        android:layout_below="@+id/btn7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
